{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "includeFiles": "index.html"
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/api/index.py"
    },
    {
      "src": "/login",
      "dest": "/api/login.py",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ]
}