{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/api/index.py",
      "methods": ["GET"]
    },
    {
      "src": "/login",
      "dest": "/api/login.py",
      "methods": ["POST"]
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    }
  ],
  "functions": {
    "api/*.py": {
      "memory": 3008,
      "maxDuration": 30
    }
  }
}